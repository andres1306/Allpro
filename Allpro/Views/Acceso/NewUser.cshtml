@model Client
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
       New user
    </div>
    <div class="card-body">
        <h5 class="card-title">New Propertis </h5>


        <form asp-action="NewUser" asp-controller="Acceso" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input asp-for="NameClient" type="text" class="form-control" id="Nombre" aria-describedby="emailHelp" placeholder="Digite el nombre">
                <span asp-validation-for="NameClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Documento</label>
                <input asp-for="DocumentClient" type="number" class="form-control" id="Email" placeholder="Email">
                <span asp-validation-for="DocumentClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Celular</label>
                <input asp-for="PhoneClient" type="number" class="form-control" id="Email" placeholder="Email">
                <span asp-validation-for="PhoneClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">User name</label>
                <input asp-for="UserName" type="text" class="form-control" id="Email" placeholder="Email">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Comunicado">Password</label><br>
                <input asp-for="UserPassword" type="password" class="from-control" placeholder="Digite su comunicado" id="Comunicado">
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Comunicado">Email</label><br>
                <input asp-for="Email" type="email" class="from-control" placeholder="Digite su comunicado" id="Comunicado">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
