@model Client
@{
    ViewData["Title"] = "ListarCo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Login Users </title>
<div class="card">
    <div class="card-header">
        Comunicados
    </div>
    <div class="card-body">
        <h5 class="card-title">Inicio de seccion </h5>


        <form asp-action="LoginUsers" asp-controller="Acceso" method="post">
            <div class="form-group">
                <label for="Email">Nombre</label>
                <input asp-for="UserName" type="text" class="form-control" id="Email" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input asp-for="UserPassword" type="password" class="form-control" id="UserPassword" placeholder="Digite La contraceña">
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
